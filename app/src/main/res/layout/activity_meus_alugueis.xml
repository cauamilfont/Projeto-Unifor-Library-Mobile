<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MeusAlugueisActivity">

    <!-- Top Bar -->
    <LinearLayout
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/ic_arrow_back"
            android:layout_width="24dp"
            android:layout_height="24dp" />

        <TextView
            android:layout_marginStart="16dp"
            android:text="Meus Aluguéis"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <!-- Tabs -->
    <LinearLayout
        android:orientation="horizontal"
        android:weightSum="3"
        android:background="#EEEEEE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnEmAnalise"
            android:text="Em Análise"
            android:background="@android:color/transparent"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnAprovados"
            android:text="Aprovados"
            android:background="@android:color/transparent"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnHistorico"
            android:text="Histórico"
            android:background="@android:color/transparent"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <!-- Lista de Livros -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="12dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Card do Livro 1 -->
            <LinearLayout
                android:orientation="horizontal"
                android:padding="12dp"
                android:background="#F7F7F7"
                android:layout_marginBottom="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:elevation="2dp"
                android:layout_margin="4dp"
                android:backgroundTintMode="src_in">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="80dp"
                    android:background="#CCCCCC" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginStart="12dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Título: A Culpa é das Estrelas"
                        android:textSize="14sp"
                        android:textColor="@android:color/black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:text="Autor: John Green"
                        android:textSize="14sp"
                        android:textColor="@android:color/black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <TextView
                    android:text="Status:\nPendente"
                    android:padding="8dp"
                    android:background="#E0E0E0"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:backgroundTintMode="src_in" />
            </LinearLayout>

            <!-- Card do Livro 2 -->
            <LinearLayout
                android:orientation="horizontal"
                android:padding="12dp"
                android:background="#F7F7F7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:elevation="2dp"
                android:layout_margin="4dp">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="80dp"
                    android:background="#CCCCCC" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginStart="12dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Título: O Pequeno Príncipe"
                        android:textSize="14sp"
                        android:textColor="@android:color/black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:text="Autor: Antoine de Saint-Exupéry"
                        android:textSize="14sp"
                        android:textColor="@android:color/black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <TextView
                    android:text="Status:\nPendente"
                    android:padding="8dp"
                    android:background="#E0E0E0"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        style="@style/Widget.Material3.BottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F7F2FA"
        app:itemActiveIndicatorStyle="@style/App.Custom.Indicator"
        app:itemIconTint="@color/bottom_nav_item_color_selector"
        app:itemTextColor="@color/bottom_nav_item_color_selector"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/bottom_nav_menu" />

</LinearLayout>
