<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    tools:context=".RecoveryPasswordActivity">

    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/titulo_recuperar"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CCCCCC"
        android:layout_marginBottom="24dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/texto_informativo"
        android:gravity="center"
        android:textSize="16sp"
        android:layout_marginBottom="24dp" />

    <EditText
        android:id="@+id/etEmailRecuperacao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_email_recuperacao"
        android:inputType="textEmailAddress"
        android:autofillHints="emailAddress"
        android:layout_marginBottom="24dp" />

    <Button
        android:id="@+id/btnEnviarCodigo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/botao_enviar_codigo"
        android:layout_marginBottom="24dp" />

    <TextView
        android:id="@+id/tvVoltarLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/link_voltar_login"
        android:textColor="@android:color/holo_blue_dark"
        android:textStyle="bold"
        android:layout_marginTop="8dp" />

</LinearLayout>